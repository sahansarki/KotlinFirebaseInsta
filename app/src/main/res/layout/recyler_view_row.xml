<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/border_stroke"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/recyclerUserPhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher_round"

            />



        <TextView
            android:id="@+id/recyclerEmailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:textStyle="bold"
            android:text="TextView"
            android:textSize="15sp" />

    </LinearLayout>



    <ImageView
        android:id="@+id/recyclerImageView"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:layout_gravity="center"
        android:paddingTop="5dp"
        app:srcCompat="@android:drawable/screen_background_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/recyclerLikeButton"
            android:tag="dislike"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:background="@drawable/ig_unlike"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/recyclerLikeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="top"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"

            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/recyclerCommentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="15dp"
            android:textSize="17sp"
            android:text="TextView"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/recyclerCommentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:paddingLeft="15dp"
            android:textSize="17sp"

            />



    </LinearLayout>



</LinearLayout>